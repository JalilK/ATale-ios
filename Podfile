pod 'Action'
pod 'FacebookLogin'
pod 'RxFirebase/Firestore'
pod 'RxFirebase/RemoteConfig'
pod 'RxFirebase/Database'
pod 'RxFirebase/Storage'
pod 'RxFirebase/Auth'
pod 'RxFirebase/Functions'
pod 'IHKeyboardAvoiding'

  # Pods for ATaleIos

  target 'ATaleIosTests' do
    # Pods for testing
pod 'RxBlocking'
pod 'RxTest'
  end

end
